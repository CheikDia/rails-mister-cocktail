<div class="banner">
  <div class="background-content">
    <h1>The wagon's cocktails...</h1>
    <p>... Bring your coding elixir !</p>
    <br>
    <div class="btn btn-warning">
      <%= link_to "Add yours", new_cocktail_path %>
    </div>
  </div>
</div>

<div class="content text-center">
    <h1>Existing ones:</h1>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-12 col-md-6 col-lg-3 p-2">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <% if cocktail.photo %>
            <%= cl_image_tag cocktail.photo.key, width: 100, height: 75, crop: :fill %>
          <% else %>
            <%= image_tag "https://images.unsplash.com/photo-1536935338788-846bb9981813?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1286&q=80" %>
          <% end %>
        </div>
      <% end %>
    </div>
</div>
